@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>sign up</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>sign up</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <div class="text-danger mb-20" asp-validation-summary="ModelOnly"></div>
                            <form method="post">
                                <span asp-validation-for="Fullname" class="text-danger"></span>
                                <input asp-for="Fullname" placeholder="Fullname">
                                <span asp-validation-for="Username" class="text-danger"></span>
                                <input asp-for="Username" placeholder="Username" autocomplete="off">
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <input asp-for="Email" placeholder="Email">
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <input asp-for="Password" placeholder="Password">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                <input asp-for="ConfirmPassword" placeholder="Confirm Password">
                                <button type="submit" class="default-btn">sign up</button>
                                <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a href="login.html" class="text-primary">Login</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register end -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>