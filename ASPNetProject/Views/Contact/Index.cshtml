@model ContactVM
@{
    ViewData["Title"] = "Contact";
}

<div class="banner-area-wrapper">
    <div class="banner-area text-center" style="background-image: url('@Url.Content("~/img/banner/"+Model.Background.Image)')!important">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>contact</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Contact Start -->

<div class="contact-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-5 col-xs-12">
                <div class="contact-contents text-center">
                    <div class="single-contact mb-65">
                        <div class="contact-icon">
                            <img src="img/contact/contact1.png" alt="contact">
                        </div>
                        <div class="contact-add">
                            <h3>address</h3>
                            <p>@Model.Bio.Address</p>                           
                        </div>
                    </div>
                    <div class="single-contact mb-65">
                        <div class="contact-icon">
                            <img src="img/contact/contact2.png" alt="contact">
                        </div>
                        <div class="contact-add">
                            <h3>phone</h3>
                            <p>@Model.Bio.Phone</p>
                        </div>
                    </div>
                    <div class="single-contact">
                        <div class="contact-icon">
                            <img src="img/contact/contact3.png" alt="contact">
                        </div>
                        <div class="contact-add">
                            <h3>website</h3>
                            <p>@Model.Bio.Website</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <div class="reply-area">
                    <h3>LEAVE A message</h3>
                    <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                    <form method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <p>Name</p>
                                <input asp-for="@Model.Message.Name" id="name">
                                <span asp-validation-for="@Model.Message.Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <p>Email</p>
                                <input asp-for="@Model.Message.Email" id="email">
                                <span asp-validation-for="@Model.Message.Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <p>Subject</p>
                                <input asp-for="@Model.Message.Subject" id="subject">
                                <span asp-validation-for="@Model.Message.Subject" class="text-danger"></span>
                                <p>Message</p>
                                <textarea asp-for="@Model.Message.Note" id="message" cols="15" rows="10"></textarea>
                                <span asp-validation-for="@Model.Message.Note" class="text-danger"></span>
                            </div>
                        </div>
                        <button asp-controller="Contact" asp-action="Message" asp-route-returnUrl="@string.Format("{0}{1}",Context.Request.Path, Context.Request.QueryString)" type="submit" style="background: #2C2B5E;color: #fff;text-transform: uppercase;font-family: 'Open Sans', sans-serif;padding: 8px 25px;
                            font-weight: 700;display: inline-block;">
                            <span>send message</span>
                        </button>
                        <p class="form-messege"></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
