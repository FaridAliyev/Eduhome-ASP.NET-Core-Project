@model IEnumerable<Course>

@foreach (Course item in Model)
{
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-course mb-70">
            <div class="course-img">
                <a asp-controller="Course" asp-action="Details" asp-route-id="@item.Id">
                    <img src="~/img/course/@item.Image" alt="course">
                    <div class="course-hover">
                        <i class="fa fa-link"></i>
                    </div>
                </a>
            </div>
            <div class="course-content" style="max-height:220px">
                <h3><a asp-controller="Course" asp-action="Details" asp-route-id="@item.Id">@item.Name</a></h3>
                <p>@Html.Raw(item.Description)</p>
                <a class="default-btn" asp-controller="Course" asp-action="Details" asp-route-id="@item.Id">read more</a>
            </div>
        </div>
    </div>
}