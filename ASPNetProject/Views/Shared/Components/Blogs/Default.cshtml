@model IEnumerable<Blog>

@foreach (Blog item in Model)
{
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-blog" style="max-height: 437px;min-height: 437px;">
            <div class="blog-img">
                <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id"><img src="img/blog/@item.Image" alt="blog"></a>
                <div class="blog-hover">
                    <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-link"></i></a>
                </div>
            </div>
            <div class="blog-content">
                <div class="blog-top">
                    <p>By @item.PostedBy  /  @item.Date  /  <i class="fa fa-comments-o"></i> 4</p>
                </div>
                <div class="blog-bottom">
                    <h2><a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id">@item.Title </a></h2>
                    <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id">read more</a>
                </div>
            </div>
        </div>
    </div>
}
