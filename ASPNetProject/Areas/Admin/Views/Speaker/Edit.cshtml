@model Speaker
@{
    ViewData["Title"] = "Edit Speaker";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit Course</h4>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label asp-for="@Model.Fullname"></label>
                                <input asp-for="@Model.Fullname" class="form-control" placeholder="Fullname">
                                <span asp-validation-for="@Model.Fullname" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label asp-for="@Model.Photo"></label>
                                <input type="file" id="file" name="File" class="form-control" placeholder="Name">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <img src="~/img/event/@Model.Image" alt="Current Photo" />
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="@Model.Duty"></label>
                                <input asp-for="@Model.Duty" class="form-control" placeholder="Duty">
                                <span asp-validation-for="@Model.Duty" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="@Model.Company"></label>
                                <input asp-for="@Model.Company" class="form-control" placeholder="Company">
                                <span asp-validation-for="@Model.Company" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-action="Index" class="btn btn-dark btn-icon-text">
                        Go Back
                        <i class="mdi mdi-keyboard-backspace btn-icon-append"></i>
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_Validation" />
}

