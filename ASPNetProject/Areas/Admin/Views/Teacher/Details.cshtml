@model TeachersVM
@{
    ViewData["Title"] = "Teacher Details";
}

    <div class="teacher-details-area pt-150 pb-60">
        <div class="container">
            <div class="row">
                <div class="col-md-5 col-sm-5 col-xs-12">
                    <div class="teacher-details-img">
                        <img src="~/img/teacher/@Model.Teacher.Image" alt="teacher" style="width:470px;height:480px">
                    </div>
                </div>
                <div class="col-md-7 col-sm-7 col-xs-12">
                    <div class="teacher-details-content ml-50">
                        <h2>@Model.Teacher.Fullname</h2>
                        <h5>@Model.Teacher.TeacherInfo.Qualification</h5>
                        <h4>about me</h4>
                        <p>@Html.Raw(Model.Teacher.TeacherInfo.About)</p>
                        <ul>
                            <li>
                                <span>degree: </span>@foreach (TeacherDegree item in Model.TeacherDegrees)
                                {
                                    if (item.TeacherId == Model.Teacher.Id)
                                    {
                                        @item.Degree.Name<span>, </span>
                                    }
                                }
                            </li>
                            <li><span>experience: </span>@Model.Teacher.TeacherInfo.ExperienceYear years experience</li>
                            <li>
                                <span>hobbies: </span>@foreach (TeacherHobbie item in Model.TeacherHobbies)
                                {
                                    if (item.TeacherId == Model.Teacher.Id)
                                    {
                                        @item.Hobbie.Name<span>, </span>
                                    }
                                }
                            </li>
                            <li><span>faculty: </span>@Model.Teacher.Faculty.Name</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-sm-4">
                    <div class="teacher-contact">
                        <h4>contact information</h4>
                        <p><span>mail me : </span>@Model.Teacher.TeacherInfo.Email</p>
                        <p><span>make a call : </span>@Model.Teacher.TeacherInfo.Phone</p>
                        <p><span>skype : </span> @Model.Teacher.TeacherInfo.Skype</p>
                        <ul style="display:flex; list-style:none">
                            <li><a href="@Model.Teacher.TeacherInfo.Facebook"><i class="mdi mdi-facebook-box" style="font-size:30px"></i></a></li>
                            <li><a href="@Model.Teacher.TeacherInfo.Pinterest"><i class="mdi mdi-pinterest-box" style="font-size:30px"></i></a></li>
                            <li><a href="@Model.Teacher.TeacherInfo.Vimeo"><i class="mdi mdi-vimeo" style="font-size:30px"></i></a></li>
                            <li><a href="@Model.Teacher.TeacherInfo.Twitter"><i class="mdi mdi-twitter" style="font-size:30px"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-9 col-sm-8">
                    <div class="skill-area">
                        <h4>skills</h4>
                    </div>
                    <div class="skill-wrapper">
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="skill-bar-item">
                                    <span>language</span>
                                    <div class="progress">
                                        <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @Model.Teacher.Skill.Language%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                            <span class="text-top">@Model.Teacher.Skill.Language%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="skill-bar-item">
                                    <span>team leader</span>
                                    <div class="progress">
                                        <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @Model.Teacher.Skill.TeamLeader%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                            <span class="text-top">@Model.Teacher.Skill.TeamLeader%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="skill-bar-item">
                                    <span>development</span>
                                    <div class="progress">
                                        <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @Model.Teacher.Skill.Development%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                            <span class="text-top">@Model.Teacher.Skill.Development%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="skill-bar-item">
                                    <span>design</span>
                                    <div class="progress">
                                        <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @Model.Teacher.Skill.Design%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                            <span class="text-top">@Model.Teacher.Skill.Design%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="skill-bar-item">
                                    <span>innovation</span>
                                    <div class="progress">
                                        <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @Model.Teacher.Skill.Innovation%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                            <span class="text-top">@Model.Teacher.Skill.Innovation%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="skill-bar-item">
                                    <span>communication</span>
                                    <div class="progress">
                                        <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @Model.Teacher.Skill.Communication%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                            <span class="text-top">@Model.Teacher.Skill.Communication%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <a asp-action="Index" class="btn btn-dark btn-icon-text">
                    Go Back
                    <i class="mdi mdi-keyboard-backspace btn-icon-append"></i>
                </a>
            </div>
        </div>
    </div>

