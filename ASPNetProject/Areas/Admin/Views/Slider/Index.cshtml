@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Sliders";
}

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Slider List</h4>
                    <p class="card-description">
                        Here you can see all sliders
                    </p>
                    <a asp-action="Create" class="btn btn-success btn-icon-text">
                        Create
                        <i class="mdi mdi-apps btn-icon-append"></i>
                    </a>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Slider item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/img/slider/@item.Image" alt="Teacher" style="border-radius:0; width:200px;height:auto;" />
                                        </td>
                                        <td>
                                            @if (Model.Count() > 1)
                                            {
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-icon-text">
                                                    Delete
                                                    <i class="mdi mdi-delete btn-icon-append"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <span>Nothing here...</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

