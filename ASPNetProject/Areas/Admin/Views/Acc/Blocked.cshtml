@model IEnumerable<UserVM>
@{
    ViewData["Title"] = "Blocked Users";
}

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">User List</h4>
                    <p class="card-description">
                        Here you can see all blocked users
                    </p>
                    @if (Model.Count() > 0)
                    {
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Fullname
                                        </th>
                                        <th>
                                            Username
                                        </th>
                                        <th>
                                            Email
                                        </th>
                                        <th>
                                            Role
                                        </th>
                                        <th>
                                            Action
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (UserVM item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @item.Fullname.ToUpper()
                                            </td>
                                            <td>
                                                @item.Username
                                            </td>
                                            <td>
                                                @item.Email
                                            </td>
                                            <td>
                                                @item.Role
                                            </td>
                                            <td>
                                                <form class="forms-sample" method="post">
                                                    <a asp-action="Activate" asp-route-id="@item.Id" class="btn btn-success btn-icon-text">
                                                        Activate
                                                        <i class="mdi mdi-account-check btn-icon-append">@Html.AntiForgeryToken()</i>
                                                    </a>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <h1>OOPS... Nothing here</h1>
                    }
                </div>
            </div>
        </div>
    </div>

