@model IEnumerable<Hobbie>
@{
    ViewData["Title"] = "Hobbies";
}

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hobby List</h4>
                    <p class="card-description">
                        Here you can see all hobbies
                    </p>
                    <a asp-action="Create" class="btn btn-success btn-icon-text">
                        Create
                        <i class="mdi mdi-apps btn-icon-append"></i>
                    </a>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Hobby
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Hobbie item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Name.ToUpper()
                                        </td>
                                        <td>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-icon-text">
                                                Delete
                                                <i class="mdi mdi-delete btn-icon-append"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

