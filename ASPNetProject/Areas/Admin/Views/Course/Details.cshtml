@model CoursesVM
@{
    ViewData["Title"] = "Course Details";
}

    <div class="courses-details-area blog-area pt-150 pb-140">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="courses-details">
                        <div class="courses-details-img">
                            <img src="~/img/course/@Model.Course.Image" alt="courses-details" style="width:770px;height:411px">
                        </div>
                        <div class="course-details-content">
                            <h2>@Model.Course.Name</h2>
                            <p>@Html.Raw(Model.Course.Description)</p>
                            <div class="course-details-left">
                                <div class="single-course-left">
                                    <h3>about course</h3>
                                    <p>@Html.Raw(Model.Course.CourseDetail.About)</p>
                                </div>
                                <div class="single-course-left">
                                    <h3>how to apply</h3>
                                    <p>@Html.Raw(Model.Course.CourseDetail.HowToApply)</p>
                                </div>
                                <div class="single-course-left">
                                    <h3>certification</h3>
                                    <p class="margin">@Html.Raw(Model.Course.CourseDetail.Certification)</p>
                                </div>
                            </div>
                            <div class="course-details-right">
                                <h3>COURSE FEATURES</h3>
                                <ul>
                                    <li>starts <span>@Model.Course.CourseFeature.StartDate.ToString("dd MMMM, yyyy")</span></li>
                                    <li>duration <span>@Model.Course.CourseFeature.Duration</span></li>
                                    <li>class duration <span>@Model.Course.CourseFeature.ClassDuration hours</span></li>
                                    <li>skill level <span>@Model.Course.CourseFeature.SkillLevel</span></li>
                                    <li>language <span>@Model.Course.CourseFeature.Language</span></li>
                                    <li>students <span>@Model.Course.CourseFeature.StudentCount</span></li>
                                    <li>assesments <span>@Model.Course.CourseFeature.Assesments</span></li>
                                </ul>
                                <h3 class="red">course fee $@Model.Course.CourseFeature.Fee</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <a asp-action="Index" class="btn btn-dark btn-icon-text">
                    Go Back
                    <i class="mdi mdi-keyboard-backspace btn-icon-append"></i>
                </a>
            </div>
        </div>
    </div>